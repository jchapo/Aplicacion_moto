<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EditClientDistrictActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Distrito de Cliente"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione el distrito:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerDistritos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <CheckBox
        android:id="@+id/cbSupera30x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="El paquete supera las dimensiones 30x30"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tarifa de comisiÃ³n:"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvComisionTarifa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 10"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coordenadas:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvCoordenadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No hay coordenadas"
        android:textSize="14sp"
        android:padding="12dp"
        android:background="#f0f0f0"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnPegarCoordenadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pegar Coordenadas desde Portapapeles"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Cambios"
        android:backgroundTint="@color/teal_200"/>

</LinearLayout>