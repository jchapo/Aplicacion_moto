<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- App Bar con Material Design 3 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:menu="@menu/detail_menu">

            <LinearLayout
                android:id="@+id/frameEditarPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvDetallePrecio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S/. 25.50"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="center"
                    android:padding="12dp" />

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CARD DEL CLIENTE -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tvCardCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header del cliente -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/colorSurfaceContainer"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvDetalleCliente"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Juan Pérez"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:drawableStart="@drawable/ic_person_24"
                            android:drawablePadding="12dp"
                            android:drawableTint="?attr/colorPrimary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEditarCliente"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:icon="@drawable/location_crosshairs_solid"
                            app:iconSize="24dp"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:contentDescription="Ubicar cliente" />

                    </LinearLayout>

                    <!-- Contenido del cliente -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Imagen -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_weight="2"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="?attr/colorOutlineVariant">

                            <ImageView
                                android:id="@+id/imagenEntrega"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/fondo_gris_nanpi"
                                android:scaleType="centerCrop"
                                android:contentDescription="Foto de entrega" />

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Imagen de dinero (oculta) -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardDinero"
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="16dp"
                            android:visibility="gone"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="?attr/colorOutlineVariant">

                            <ImageView
                                android:id="@+id/imagenDinero"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/fondo_gris_nanpi"
                                android:scaleType="centerCrop"
                                android:contentDescription="Foto de pago" />

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Botones de acción -->
                        <LinearLayout
                            android:id="@+id/linearLayoutContacto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <!-- Primera fila -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnWazeCliente"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginEnd="8dp"
                                    app:icon="@drawable/waze_brands"
                                    app:iconSize="24dp"
                                    app:iconGravity="textStart"
                                    app:iconTint="@color/waze_blue"
                                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                    android:contentDescription="Abrir en Waze" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnMapsCliente"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:icon="@drawable/map_regular"
                                    app:iconSize="24dp"
                                    app:iconGravity="textStart"
                                    app:iconTint="?attr/colorPrimary"
                                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                    android:contentDescription="Abrir en Maps" />

                            </LinearLayout>

                            <!-- Segunda fila -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnWhatsappCliente"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginEnd="8dp"
                                    app:icon="@drawable/whatsapp_brands"
                                    app:iconSize="24dp"
                                    app:iconGravity="textStart"
                                    app:iconTint="@color/whatsapp_green"
                                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                    android:contentDescription="Enviar WhatsApp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnTelefonoCliente"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:icon="@drawable/phone_solid"
                                    app:iconSize="24dp"
                                    app:iconGravity="textStart"
                                    app:iconTint="?attr/colorPrimary"
                                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                    android:contentDescription="Llamar" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- CARD DEL PROVEEDOR -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tvCardProveedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header del proveedor -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="?attr/colorSurfaceContainer"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvDetalleProveedor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Restaurante Central"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:drawableStart="@drawable/ic_store_24"
                            android:drawablePadding="12dp"
                            android:drawableTint="?attr/colorSecondary" />

                    </LinearLayout>

                    <!-- Contenido del proveedor -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Imagen -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_weight="2"
                            android:layout_marginEnd="16dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="?attr/colorOutlineVariant">

                            <ImageView
                                android:id="@+id/imagenRecojo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/fondo_gris_nanpi"
                                android:scaleType="centerCrop"
                                android:contentDescription="Foto de recojo" />

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Botones de acción -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <!-- Primera fila -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnWazeProveedor"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginEnd="8dp"
                                    app:icon="@drawable/waze_brands"
                                    app:iconSize="24dp"
                                    app:iconGravity="textStart"

                                    app:iconTint="@color/waze_blue"
                                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                    android:contentDescription="Abrir en Waze" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnMapsProveedor"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:icon="@drawable/map_regular"
                                    app:iconSize="24dp"
                                    app:iconGravity="textStart"
                                    app:iconTint="?attr/colorPrimary"
                                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                    android:contentDescription="Abrir en Maps" />

                            </LinearLayout>

                            <!-- Segunda fila -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnWhatsappProveedor"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_marginEnd="8dp"
                                    app:icon="@drawable/whatsapp_brands"
                                    app:iconSize="24dp"
                                    app:iconGravity="textStart"
                                    app:iconTint="@color/whatsapp_green"
                                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                    android:contentDescription="Enviar WhatsApp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnTelefonoProveedor"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:icon="@drawable/phone_solid"
                                    app:iconSize="24dp"
                                    app:iconGravity="textStart"
                                    app:iconTint="?attr/colorPrimary"
                                    style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                    android:contentDescription="Llamar" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Botones flotantes inferiores -->
    <LinearLayout
        android:id="@+id/layout_botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="?attr/colorSurface"
        android:elevation="8dp"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCamara"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cámara"
            app:icon="@drawable/camera_solid"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            style="@style/Widget.Material3.Button.UnelevatedButton"
            android:contentDescription="Abrir cámara" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDinero"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:text="Dinero"
            app:icon="@drawable/money_bill_wave_solid"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            style="@style/Widget.Material3.Button.UnelevatedButton"
            android:contentDescription="Foto de dinero" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheck"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Confirmar"
            app:icon="@drawable/check_solid"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            style="@style/Widget.Material3.Button"
            android:contentDescription="Confirmar acción" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>